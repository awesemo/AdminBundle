        {# icheck #}
        <link href="{{ asset('bundles/rmzamorajquery/jquery-plugins/icheck/skins/all.css') }}" rel="stylesheet">
        {% block sonata_stylesheet_block %}
            {% stylesheets 'bundles/rmzamorajquery/jquery-plugins/select2/select2.css'
                           'bundles/rzadmin/css/font.css'
