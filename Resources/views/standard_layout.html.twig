            {{ _title|raw }}
        {% else %}
            {% if action is defined %}
                -
                {% for menu in admin.breadcrumbs(action) %}
                    {% if not loop.first  %}
                        &gt;
                    {% endif %}
                    {% if (menu.label|raw == '&#8962;' or menu.label == '⌂') %}Dashboard{% else %}{{ menu.label }}{% endif %}
