                       '@RmzamoraJqueryBundle/Resources/public/jquery-plugins/qtip2/css/qtip.css'
                       '@RmzamoraBootstrapBundle/Resources/public/plugins/select/css/select.css'
                       '@RmzamoraBootstrapBundle/Resources/public/plugins/datepicker/css/datepicker.css'
