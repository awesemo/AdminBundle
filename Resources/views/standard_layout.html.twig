<body id="rz-body">
<a href="#" class="scrolltop">
    <span><i class=" icon-arrow-up icon-large"></i></span>
</a>
<div id="maincontainer" class="clearfix">
{##############################################
 #   header
 ##############################################}
<header>
{% block navbar %}
{# navbar #}
<div class="navbar navbar-fixed-top">
    {# .navbar-inner #}
    <div class="navbar-inner">
        {# container fluid #}
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            {% if admin_pool is defined %}
                {% block logo %}
                    <a href="{{ url('sonata_admin_dashboard') }}" class="brand">
                        <img src="{{ asset(admin_pool.titlelogo) }}"  alt="{{ admin_pool.title }}" />
                        {{ admin_pool.title }}
                    </a>
                {% endblock %}
                {# .nav-collapse #}
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        {% block top_bar_before_nav %} {% endblock %}
                        {% block sonata_top_bar_nav %}
                            {% if app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
                                {% for group in admin_pool.dashboardgroups %}
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ group.label|trans({}, group.label_catalogue) }} <i class="icon-chevron-down"></i></a>
                                        <ul class="dropdown-menu">
                                            {% for admin in group.items %}
                                                {% if admin.hasroute('list') and admin.isGranted('LIST') %}
                                                    <li><a href="{{ admin.generateUrl('list')}}">{{ admin.label|trans({}, admin.translationdomain) }}</a></li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        {% endblock %}
                        {% block top_bar_after_nav %}{% endblock %}
                        {% include admin_pool.getTemplate('user_block') %}
                    </ul>
                </div>{#/.nav-collapse #}
            {% endif %}
        </div>{#/ container fluid #}
    </div>{#/ .navbar-inner #}
</div>{#/ .navbar #}
{% endblock navbar %}
</header>{#/ header #}
{##############################################
 #   container
 ##############################################}
{# container fluid #}
<div class="container-fluid">
    {# div row #}
    <div class="row-fluid">
        {# div span #}
        <div class="span12">
            {# content wrapper #}
            <div id="contentwrapper">
                {# main content #}
                <div class="main_content">
                {% block main_content %}
                    {# notices & flash messages #}
                    {% block notice %}
                        {% for notice_level in ['success','error','info', 'warning'] %}
                            {% set session_var = 'sonata_flash_' ~ notice_level %}
                            {% for flash in app.session.flashbag.get(session_var) %}
                                <div class="alert {{ 'alert-' ~ notice_level }}">
                                    {{ flash|trans([], 'SonataAdminBundle') }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock %}
                    {#/ notices & flash messages #}
                    {# page tite #}
                    {# TODO: add settings for page titile and description #}
                    {% block admin_module_title %}{% endblock admin_module_title %}
                    {#/ page tite #}
                    {# breadcrumbs #}
                    {% if _breadcrumb is not empty or action is defined %}
                    <nav>
                        <div id="rz-admin-jcrumbs" class="breadCrumb module">
                            <ul>
                            {% if _breadcrumb is empty %}
                                {% if action is defined %}
                                    {% for menu in admin.breadcrumbs(action) %}
                                        {% if not loop.last  %}
                                            <li>
                                                {% if menu.uri is not empty %}
                                                    <a href="{{ menu.uri }}">{% if (menu.label|raw == '&#8962;' or menu.label == '⌂') %}<i class="icon-dashboard"></i>{% else %}{{ menu.label }}{% endif %}</a>
                                                {% else %}
                                                    {{ menu.label }}
                                                {% endif %}
                                            </li>
                                        {% else %}
                                            <li class="active">{{ menu.label }}</li>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            {% else %}
                                {{ _breadcrumb|raw }}
                            {% endif %}
                            </ul>
                        </div>
                    </nav>
                    {% endif %}
                    {#/ breadcrumbs #}
                    {# action buttons #}
                    {%block actions %}{% endblock %}
                    {#/ action buttons #}
                    {# list filter #}
                    {% if _list_filters is not empty %}
                        {{ _list_filters|raw }}
                    {% endif %}
                    {#/ list filter #}
                    <div class="row-fluid">
                        <div class="content {{ _side_menu is not empty ? ' span9' : 'span12' }}">
                            {% block sonata_admin_content %}
                                {% if _preview is not empty %}
                                    <div class="sonata-ba-preview">{{ _preview|raw }}</div>
                                {% endif %}

                                {% if _content is not empty %}
                                    <div class="sonata-ba-content">{{ _content|raw }}</div>
                                {% endif %}

                                {% if _show is not empty %}
                                    <div class="sonata-ba-show">{{ _show|raw }}</div>
                                {% endif %}

                                {% if _form is not empty %}

                                            {{ _form|raw }}

                                {% endif %}

                                {% if _list_table is not empty %}
                                    <div class="row-fluid">
                                        <div class="sonata-ba-list span12">
                                            {{ _list_table|raw }}
                                        </div>
                                    </div>
                                {% endif %}

                            {% endblock %}
                        </div>
                        {% if _side_menu is not empty %}
                            <div class="admin-sidebar-container span3">
                                <div class="widget-box">
                                    <div class="widget-title">
                                        <span class="icon"><i class="micon-menu"></i></span>
                                        <h5>
                                            My Shortcuts
                                        </h5>
                                    </div>
                                    <div class="widget-content nopadding">
                                        <div class="row-fluid">
                                            <div class="admin-sidebar span12">
                                                {{ _side_menu|raw }}
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        {% endif %}
                    </div>
                {% endblock main_content %}
                </div>{#/main content #}
            </div>{#/content wrapper #}
        </div>{#/div span #}
    </div>{#/div row #}
</div>{#/container fluid #}
