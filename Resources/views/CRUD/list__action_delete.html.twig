{% if admin.isGranted('DELETE', object) and admin.hasRoute('delete') %}
    <a href="{{ admin.generateObjectUrl('delete', object) }}" class="delete_link btn btn-danger" title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}">
        <i class="icon-trash"></i>
    </a>
{% endif %}
